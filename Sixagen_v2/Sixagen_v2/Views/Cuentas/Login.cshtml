@model Sixagen_v2.Models.Cuentas

<link rel="stylesheet" type="text/css" href="../../Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../../Content/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="../../Content/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="../../Content/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="../../Content/css/util.css">
    <link rel="stylesheet" type="text/css" href="../../Content/css/main.css">

@{
    ViewBag.Title = "Login";
}

<div class="limiter">

    <div class="container-login100">

        <div class="wrap-login100">


            <div class="login100-pic js-tilt" data-tilt>
                <img src="../../Content/images/img-01.png" alt="IMG">
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <span class="login100-form-title">
                    Sixagen Login
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "input100", @placeholder = "Usuario" } })
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">


                        @Html.PasswordFor(model => model.Clave, new { @class = "input100", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>


                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Iniciar Session
                        </button>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/Cuentas/Registrar">
                            Registrarse
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>

    }


        </div>

    </div>

</div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="../../Content/vendor/select2/select2.min.js"></script>
    <script src="../../Content/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="../../Content/js/main.js"></script>
