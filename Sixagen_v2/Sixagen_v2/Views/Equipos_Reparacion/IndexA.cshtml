@model IEnumerable<Sixagen_v2.Equipos_Reparacion>

@{
    ViewBag.Title = "Index";
}

<h2>Equipos Reparación</h2>

<p>
    @Html.ActionLink("Agregar Equipo", "Create", null, new { @Class = "badge badge-success", @Id = "crear" })
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Equipo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Problema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Fecha
            </th>
            <th>
                Cliente
            </th>
            <th>
                Empleado Encargado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_Equipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Problema)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Entrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clientes.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleados.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditA", new { id = item.ID }, new { @Class = "badge badge-primary" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @Class = "badge badge-success" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID }, new { @Class = "badge badge-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
